{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "eager-lead-line.css"
      }
    ],
    "body": [
      {
        "type": "script",
        "src": "eager-lead-line.js"
      }
    ]
  },
  "options": {
    "properties": {
      "goal": {
        "order": 1,
        "title": "What’s the goal you’re trying to achieve?",
        "type": "string",
        "format": "radios",
        "enum": [
          "cta",
          "signup",
          "announcement"
        ],
        "enumNames": {
          "cta": "Drive traffic<span class=\"help-text\">Show a message and a juicy button your visitors will want to click.</span>",
          "signup": "Collect email addresses<span class=\"help-text\">Show a message and an input for visitors to enter their email. <small>Powered by <a href=\"http://formspree.io\" target=\"_blank\" class=\"with-inherited-color\"><strong>Forspree</strong></a>.</small></span>",
          "announcement": "Make an announcement<span class=\"help-text\">Just display a simple message.</span>"
        },
        "default": "cta"
      },


      "ctaText": {
        "order": 2,
        "showIf": {
          "goal": "cta"
        },
        "title": "Message text",
        "type": "string",
        "format": "textarea",
        "default": "We just launched an amazing new product!"
      },
      "ctaButtonText": {
        "order": 3,
        "showIf": {
          "goal": "cta"
        },
        "title": "Button text",
        "type": "string",
        "default": "Take me there"
      },
      "ctaLinkAddress": {
        "order": 4,
        "showIf": {
          "goal": "cta"
        },
        "title": "URL to drive traffic to",
        "type": "string",
        "default": "http://eager.io"
      },


      "signupEmail": {
        "order": 5,
        "showIf": {
          "goal": "signup"
        },
        "title": "Email address to send signups to",
        "description": "<strong>Required</strong>; e.g. <em>your@email.com</em>",
        "type": "string",
        "default": ""
      },
      "signupText": {
        "order": 6,
        "showIf": {
          "goal": "signup"
        },
        "title": "Message text",
        "type": "string",
        "format": "textarea",
        "default": "Join our mailing list to be the first to know what we’re up to!"
      },
      "signupButtonText": {
        "order": 7,
        "showIf": {
          "goal": "signup"
        },
        "title": "Button text",
        "type": "string",
        "default": "Sign up"
      },
      "signupSuccessText": {
        "order": 8,
        "showIf": {
          "goal": "signup"
        },
        "title": "Thank you text",
        "description": "This text will display after visitors enter their email.",
        "type": "string",
        "default": "Thanks for signing up! :)"
      },


      "announcementText": {
        "order": 9,
        "showIf": {
          "goal": "announcement"
        },
        "title": "Message text",
        "type": "string",
        "format": "textarea",
        "default": "Sale! Everything is 75% off this entire week."
      },


      "color": {
        "order": 10,
        "title": "Accent color",
        "type": "string",
        "format": "color",
        "default": "#0099ff"
      }
    }
  }
}
